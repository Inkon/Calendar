<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
http://dozer.sourceforge.net/schema/beanmapping.xsd">
    <mapping>
        <class-a>com.calendar.shared.entity.Filter</class-a>
        <class-b>com.calendar.shared.dto.FilterDTO</class-b>
        <field-exclude>
            <a>attachedEvents</a>
            <b>attachedEvents</b>
        </field-exclude>
    </mapping>
    <mapping>
        <class-a>com.calendar.shared.entity.User</class-a>
        <class-b>com.calendar.shared.dto.UserDTO</class-b>
        <field-exclude>
            <a>ownEvents</a>
            <b>ownEvents</b>
        </field-exclude>
        <field-exclude>
            <a>invites</a>
            <b>invites</b>
        </field-exclude>
        <field-exclude>
            <a>filters</a>
            <b>filters</b>
        </field-exclude>
    </mapping>
    <mapping>
        <class-a>com.calendar.shared.entity.Event</class-a>
        <class-b>com.calendar.shared.dto.EventDTO</class-b>
        <field-exclude>
            <a>invites</a>
            <b>invites</b>
        </field-exclude>
        <field-exclude>
            <a>allFilters</a>
            <b>allFilters</b>
        </field-exclude>
    </mapping>
    <mapping>
        <class-a>com.calendar.shared.entity.Invite</class-a>
        <class-b>com.calendar.shared.dto.InviteDTO</class-b>
    </mapping>

</mappings>
